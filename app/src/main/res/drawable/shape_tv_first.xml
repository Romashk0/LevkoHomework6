<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:angle="270"
        android:centerColor="@color/colorLightYellow"
        android:endColor="@color/colorPurple"
        android:startColor="@color/colorWhite"
        android:type="linear" />
    <corners android:radius="@dimen/tv_radius" />
    <stroke
        android:width="@dimen/tv_stroke"
        android:color="@color/colorPrimaryDark"
        android:dashGap="@dimen/dash_gap"
        android:dashWidth="@dimen/dash_width"/>
</shape>